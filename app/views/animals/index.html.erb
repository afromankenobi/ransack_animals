<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<%= search_form_for @search do |f| %>
  <h4>Buscar</h4>
  <div class="field">
    <%= f.label :name_cont, "Nombre contiene" %>
    <%= f.text_field :name_cont %>
  </div>
  <div class="field">
    <%= f.label :amount_gt, "Cantidad entre" %>
    <%= f.text_field :amount_gt %>
    <%= f.label :amount_lt, "y" %>
    <%= f.text_field :amount_lt %>
  </div>
  <div class="field">
    <%= f.submit "Search", :disable_with => 'Searching...' %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= sort_link @search, :name, 'Nombre de animal' %></th>
      <th><%= sort_link @search, :category, 'Categoria' %></th>
      <th><%= sort_link @search, :amount, 'Cantidad' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.category.name %></td>
        <td><%= animal.amount %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal', new_animal_path %>
